<UserControl x:Class="MwLib.DemoViews.CanvasDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <ScrollViewer x:Name="ScrollViewerRoot">
            <ScrollViewer.HorizontalScrollBarVisibility>Auto</ScrollViewer.HorizontalScrollBarVisibility>
            <ScrollViewer.VerticalScrollBarVisibility>Auto</ScrollViewer.VerticalScrollBarVisibility>
            <Canvas x:Name="CanvasRoot">
                <Canvas.Background>
                    <SolidColorBrush Color="#333"/>
                </Canvas.Background>

                <!-- 下地の画像 -->
                <Image x:Name="MyImage" />

                <!-- 画像の上に重ねる Path -->
                <Path Data="M 100,100 L 400,100 L 400,300 L 100,300 Z">
                      <Canvas.Left>100</Canvas.Left>
                      <Canvas.Top>100</Canvas.Top>
                      <Path.Stroke>
                        <SolidColorBrush Color="Red"/>
                      </Path.Stroke>
                      <Path.StrokeThickness>5</Path.StrokeThickness>
                      <Path.Fill>#40FF0000</Path.Fill>
                </Path>

            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
