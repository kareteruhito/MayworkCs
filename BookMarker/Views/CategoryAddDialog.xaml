<Window x:Class="BookMarker.Views.CategoryAddDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="カテゴリ名の追加"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="カテゴリ名を入力してください" />

        <TextBox x:Name="NameTextBox"
                 Grid.Row="1"
                 Margin="0,10,0,0"
                 MinWidth="360"
                 Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,12,0,0">
            <Button Content="OK"
                Width="90"
                IsDefault="True"
                Margin="0,0,8,0"
                Click="Ok_Click" />
            <Button
                Content="キャンセル"
                Width="90"
                IsCancel="True"
                Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>